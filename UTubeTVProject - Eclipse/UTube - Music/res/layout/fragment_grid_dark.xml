<com.distantfuture.videos.misc.FragmentLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent">

    <uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout
        android:id="@+id/grid_frame_layout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="@color/content_background">


        <FrameLayout
            android:id="@+id/dimmer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1"
            android:background="@color/dimmer_color">
        </FrameLayout>

        <GridView
            android:id="@+id/gridview"
            style="@style/GridDefaults.Dark"
            />

        <include layout="@layout/empty_view_grid"/>

    </uk.co.senab.actionbarpulltorefresh.library.PullToRefreshLayout>
</com.distantfuture.videos.misc.FragmentLayout>
