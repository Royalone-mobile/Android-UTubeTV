<resources>

    <style name="GridDefaults">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:columnWidth">260dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">center</item>
        <item name="android:listSelector">@drawable/grid_list_selector</item>
    </style>

    <style name="GridDefaults.Light">
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:verticalSpacing">1dp</item>
    </style>

    <style name="GridDefaults.Dark">
        <item name="android:cacheColorHint">@android:color/black</item>
        <item name="android:requiresFadingEdge">vertical</item>

        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:horizontalSpacing">3dp</item>
        <item name="android:verticalSpacing">3dp</item>

    </style>

    <style name="GridDefaults.Card">
        <item name="android:horizontalSpacing">8dp</item>
        <item name="android:verticalSpacing">0dp</item>
    </style>

</resources>
