<resources>

    <!-- Change this to AppThemeDark in your theme file if you want dark at the default. -->

    <style name="AppTheme" parent="AppThemeLight">
    </style>

    <color name="action_bar_icon_color_dark">#ffffffff</color>
    <color name="action_bar_icon_color">#ff000000</color>

    <!-- Dark or light, override above in theme to get one or the other -->

    <style name="AppThemeLight" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="playerToolbarBackground">@drawable/toolbar_light</item>
        <item name="nav_drawer_menu_drawable">@drawable/nav_drawer_hl</item>
        <item name="action_bar_icon_color">@color/action_bar_icon_color</item>
    </style>

    <style name="AppThemeDark" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarDark</item>
        <item name="playerToolbarBackground">@drawable/toolbar_light</item>
        <item name="nav_drawer_menu_drawable">@drawable/nav_drawer_hd</item>
        <item name="action_bar_icon_color">@color/action_bar_icon_color_dark</item>
    </style>

    <style name="DrawerActivityStartupTheme" parent="android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@drawable/default_window_background</item>
    </style>

    <style name="DrawerActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/default_window_background</item>
    </style>

    <!-- ActionBar styles -->

    <style name="ActionBar"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/action_bar</item>
    </style>

    <style name="ActionBarDark"
           parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar</item>
    </style>

</resources>
