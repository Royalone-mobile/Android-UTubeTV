<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/action_bar_start_color"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/action_bar_divider_color"/>
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/action_bar_end_color"
                android:startColor="@color/action_bar_start_color"
                android:type="linear"/>
        </shape>

    </item>
</layer-list>

